<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nortonwei.skycar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LaunchActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label=""
            android:parentActivityName=".LaunchActivity"
            android:theme="@style/AppTheme.WhiteActionBar" />
        <activity
            android:name=".SignUpActivity"
            android:label=""
            android:parentActivityName=".LaunchActivity"
            android:theme="@style/AppTheme.WhiteActionBar" />
        <activity
            android:name=".AuthCodeActivity"
            android:label=""
            android:parentActivityName=".SignUpActivity"
            android:theme="@style/AppTheme.WhiteActionBar" />
        <activity
            android:name=".ProfileSetActivity"
            android:label=""
            android:parentActivityName=".AuthCodeActivity"
            android:theme="@style/AppTheme.WhiteActionBar" />
        <activity
            android:name=".PasswordSetActivity"
            android:label=""
            android:parentActivityName=".ProfileSetActivity"
            android:theme="@style/AppTheme.WhiteActionBar" />
        <activity
            android:name=".HomeActivity"
            android:label=""
            android:theme="@style/AppTheme.RedActionBar" />
        <activity
            android:name=".AirportPickupActivity"
            android:label=""
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.RedActionBar" />
    </application>

</manifest>